#!/usr/bin/env python3
import psycopg2
from fastapi import FastAPI

app = FastAPI()

DB_NAME = "{{ db_name }}"
DB_USER = "{{ db_user }}"
DB_PASSWORD = "{{ db_password }}"
DB_HOST = "{{ db_host }}"
DB_PORT = "{{ db_port }}"

@app.get("/")
def read_root():
    return {"message": "Hello from FastAPI!"}

@app.get("/mon_nom")
def get_mon_nom():
    try:
        conn = psycopg2.connect(
            dbname=DB_NAME,
            user=DB_USER,
            password=DB_PASSWORD,
            host=DB_HOST,
            port=DB_PORT
        )
        cur = conn.cursor()
        cur.execute("SELECT name FROM cytech LIMIT 1;")
        row = cur.fetchone()
        cur.close()
        conn.close()

        if row:
            return {"mon_nom": row[0]}
        else:
            return {"mon_nom": "Aucun enregistrement trouv√©"}

    except Exception as e:
        return {"error": str(e)}
